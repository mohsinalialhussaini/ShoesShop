@model JOOTASHOP.Models.RegestrationModel

@{
    ViewBag.Title = "Regestration";
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Registeration</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Content/myStyle.css" rel="stylesheet">
    <style>
        #radioBtn .notActive {
            color: #3276b1;
            background-color: #fff;
        }
    </style>

</head>

<body class="bg-gradient-primary">

    <!-- Nested Row within Card Body -->
    <div class="row">

        <img src="~/Content/download.png" width="300px" height="300px" style="margin-top:50px; margin-left:30px;" />

        <div class="col-lg-7">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="bg-primary" style="color:white; border-radius:10px;">Add New Customer</h1>
                </div>

                @using (Html.BeginForm(FormMethod.Post))
                {


                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">


                            @Html.TextBoxFor(x => x.firstName, new { @Class = "form-control form-control-user", placeholder = "First Name" })
                            @Html.ValidationMessageFor(x => x.firstName, null, new { @class = "ErrorMsg" })
                        </div>
                        <div class="col-sm-6">

                            @Html.TextBoxFor(x => x.lastName, new { @Class = "form-control form-control-user", placeholder = "Last Name" })
                            @Html.ValidationMessageFor(x => x.lastName)
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.TextBoxFor(x => x.Email, new { @Class = "form-control form-control-user", placeholder = "Email" })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>

                    <div class="form-group">

                        @Html.TextBoxFor(x => x.CNIC, new { @Class = "form-control form-control-user", placeholder = "CNIC" })
                        @Html.ValidationMessageFor(x => x.CNIC)
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">

                            @Html.TextBoxFor(x => x.Contact, new { @Class = "form-control form-control-user", placeholder = "Cell " })
                            @Html.ValidationMessageFor(x => x.Contact)
                        
                          </div>

                        <div class="col-sm-6 mb-3 mb-sm-0">

                            @Html.PasswordFor(x => x.UserPassword, new { @Class = "form-control form-control-user", placeholder = "Password " })
                            @Html.ValidationMessageFor(x => x.UserPassword)

                        </div>


                      

                    </div>

                    @helper button(string type, string value, string clas = "btn btn-info btn-user btn-block")
                    {

                <input type="@type" value="@value" class="@clas">

}

                    @button("submit", "Submit")
                    @button("reset", "Discard", "btn btn-info btn-user btn-block btn-danger")


                }


                <label>@ViewBag.Message</label>
            </div>
        </div>
    </div>




    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin-2.min.js"></script>

    <script>

        $('#radioBtn a').on('click', function () {
            var sel = $(this).data('title');
            var tog = $(this).data('toggle');
            $('#' + tog).prop('value', sel);

            $('a[data-toggle="' + tog + '"]').not('[data-title="' + sel + '"]').removeClass('active').addClass('notActive');
            $('a[data-toggle="' + tog + '"][data-title="' + sel + '"]').removeClass('notActive').addClass('active');
        })
    </script>

</body>

</html>
