@model JOOTASHOP.Models.loginModel
@{
    ViewBag.Title = "index";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Login</title>
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">

                            <div class="col-lg-6 d-none d-lg-block "><img src="~/Content/a.png" height="450px" /></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome!</h1>
                                    </div>

                                    @using (Html.BeginForm(FormMethod.Post))
                                    {


                                        
                                        <div class="form-group">

                                            @Html.TextBoxFor(x => x.UserName, new { @Class = "form-control form-control-user", placeholder = "Email" })
                                            @Html.ValidationMessageFor(x => x.UserName)
                                        </div>

                                        <div class="form-group">

                                            @Html.PasswordFor(x => x.password, new { @Class = "form-control form-control-user", placeholder = "Password " })
                                            @Html.ValidationMessageFor(x => x.password)
                                        </div>


                                      
                                            <label class="">Login As Admin</label>
                                            @Html.CheckBoxFor(x => x.isManager, new { @Class = "", placeholder = "Password " })
                                            
                                            @Html.ValidationMessageFor(x => x.isManager)
                                       




                                        

                                        @helper button(string type, string value, string clas = "btn btn-info btn-user btn-block")
                                        {

                                    <input type="@type" value="@value" class="@clas">

}

                                        @button("submit", "Submit")
                                        @button("reset", "Discard", "btn btn-info btn-user btn-block btn-danger")


                                    }


                                    <label>@ViewBag.Message</label>



                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin-2.min.js"></script>
</body>

</html>

















